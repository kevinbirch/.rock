# -*- shell-script -*-
# .alias.plat - aliases for darwin platform

alias ldd='otool -L'

alias hinv="sw_vers; echo; system_profiler SPHardwareDataType | head -n 15 | tail -n 11 | sed 's/^ *//g' ; echo; df"
alias ginfo='system_profiler SPDisplaysDataType'

alias awk='/usr/local/bin/gawk'
alias sed='/usr/local/bin/gsed'

# all coreutils commands are added to the path using their real name in environment.plaf
